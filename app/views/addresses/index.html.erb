<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Line one</th>
      <th>City</th>
      <th>State region</th>
      <th>Zipcode</th>
      <th>Country</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.owner %></td>
        <td><%= address.line_one %></td>
        <td><%= address.city %></td>
        <td><%= address.state_region %></td>
        <td><%= address.zipcode %></td>
        <td><%= address.country %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

