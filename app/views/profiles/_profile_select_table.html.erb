<table id="profile_index_table">
  <thead>
    <tr>
      <th></th>
      <th>Full name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

<tbody>
<% @profiles.each do |profile| %>
	<tr>
	    <td><%= link_to 'View', profile %></td>

	        <td><%= profile.full_name %></td>

	    <td><%= profile.email %></td>
	    <td><%= link_to 'X', profile, method: :delete, class: "remove_fields", data: { confirm: "Delete Record for '#{profile.full_name}'?" } %>
	    </td>
	</tr>
<% end if @profiles%>
</tbody>
</table>