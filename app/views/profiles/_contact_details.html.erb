

<div class="profile_show_section">



<% if @profile.profile_type == 'AGENT' || @profile.profile_type == 'INDIVIDUAL' || @profile.profile_type == 'GUEST' %>

  <h2 class="hidden title">Client Details</h2>

   <table class="table2">

        <tr>
          <th>Nationality</th>
          <th>Marital Status</th>
          <th>Occupation</th>
          <th>Employer</th>
          <th>Position</th>


        </tr>
        <tr>
            <td><%= best_in_place @profile, :nationality %></td>
            <td><%= best_in_place @profile, :marital_status, type: :select, collection: marital_status_types %></td>

            <td><%= best_in_place @profile, :occupation%></td>
            
            <td><%= best_in_place @profile, :employer%></td>
            
            <td><%= best_in_place @profile, :job_position%></td>
        </tr>
    </table>


<% else %>
   <h2 class="hidden title">Contact Details</h2>

   <table id="contact_details_table">
      <tr>
        <td>
        <h4>Contact Person</h4>
        <%= best_in_place @profile, :contact_person%>
        </td>
      </tr>
    </table>
<% end %>     




  <div class="section_body">
      <table id="contact_details_table">
        <tr>
          <td id="phone_column" class="wip">
            <h4>Contact Numbers</h4>
            <ul id="phone_ul" class="wic">
              <% @profile.phones.each do | phone | %>
                <%= render phone %>
              <% end %>
            </ul>
            <div class="no-print toggler">
              <%=link_to 'Add', '#', id: 'add_phone_link', class: 'add_fields no-print'%>
              <%= form_for(@new_phone, remote: true) do |f| %>
                    <%= f.select :phone_type, phone_types%>
                    <%= f.telephone_field :number, class: "contact_numbers focus_on_toggle" %>
                    <%= f.hidden_field :contact_detail_type%>
                    <%= f.hidden_field :contact_detail_id%>
                    <%= f.submit "Add", id: 'add_contact_number_submit' %>
                    <%= link_to 'Hide', '', id: "hide_new_purchase_order_number_link" %>
              <% end %>
            </div>

          </td>
          <td id="address_column"  class="wip">
           <h4>Addresses</h4>
            <ul id="addresses_ul" class="wic">
              <% @profile.addresses.each do | addresses | %>
                <%= render addresses %>
              <% end %>
            </ul>
            <div class="no-print toggler" >
              <%=link_to 'Add', '', id: 'add_address_link', class: 'add_fields no-print'%>
              <%= form_for(@new_address, remote: true) do |f| %>
                    <fieldset>
                      <%=f.label 'Type'%>
                      <%=f.select :address_type, ['Home', 'Business']%>
                    </fieldset>
                    <fieldset><%=f.label 'Address Line 1:'%>
                    <%= f.text_area :line_one, class: 'focus_on_toggle'%></fieldset>
                    <fieldset>
                      <%=f.label 'City: '%><%= f.text_field :city%>
                      <%=f.label 'State/Region'%><%= f.text_field :state_region%>
                    </fieldset>
                    <fieldset>
                    <%=f.label 'Zip Code:'%><%= f.text_field :zipcode%>
                    <%=f.label 'Country'%><%= f.text_field :country%>
                    </fieldset>
                    <%= f.hidden_field :owner_type%>
                    <%= f.hidden_field :owner_id%>
                    <%= f.submit "Add", id: 'add_address_submit' %>
                    <%= link_to 'Hide', '', id: "hide_new_address_link" %>
              <% end %>

            </div>
          </td>
        </tr>
      </table>
    </div>
</div>