<% if @profile.account %>
<div id="group_details" class="profile_show_section wip liquidSlider_auto_height">
	<h2 class="hidden title">
	Guests
	</h2>
	<div id="group_details_body" class="section_body">
	<% if can? :create, Group %>
		<div id="help">
			<div class="toggler">
			<%=render 'groups/form' %>
			<%=link_to 'Add Guest', '', id: "add_group_link", class: 'add_fields no-print'%>
			</div>
		</div>
	<% end %>
		<div class="wic"></div>	
		<div id="groups_list">

		<%@profile.account.groups.each do | group | %>
			<%=render group%>
		<% end %>
		</div>

	</div>
	
</div>
<% end %>
