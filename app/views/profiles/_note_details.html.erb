<div id="note_details" class="profile_show_section liquidSlider_auto_height">

	<h2 class="section_divider title">
	Notes
	</h2>
	<div class="section_body wip">
		<%if can? :create, Note %>
		<div class="toggler">

			<%=link_to 'Add Note', '', id: "add_note_link", class: 'add_fields no-print'%>
			<div>
				<%=render 'notes/form'%>
			</div>
		</div>
		<% end %>
		
		
		<div id="notes_list">

			<%@profile.notes.each do | note | %>
				<%=render note%>
			<% end %>
		</div>

		<div class="wic">
		</div>
		
	</div>
</div>
