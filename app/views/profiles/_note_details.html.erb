<div id="note_details" class="profile_show_section liquidSlider_auto_height">

	<h2 class="section_divider hidden title">
	Notes
	</h2>
	<div class="section_body">
		<%if can? :create, Note %>
<%=link_to 'Add Note', 
	new_note_path(profile_id: @profile.id, source: 'show', remote: true), 
	class: 'std_button', remote: true%>
		<% end %>
		
		<table id="notes_list">
			<tbody>
				<th>Note</th>
				<th>User</th>
				<th>Date</th>
				<th></th>
			</tbody>

			<%@profile.notes.each do | note | %>
				<%=render note%>
			<% end %>
		</table>
		
	</div>
</div>
