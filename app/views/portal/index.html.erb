
<div class="portal">

<div class="controls container titleize">
  <div  class="box span-11 portal-1">
  <h3>View Client Profiles</h3>
    <ul>
      <li><%= link_to 'Individual', profiles_path(profile_type: 'Individual') %></li>
      <li><%= link_to 'Corporate', profiles_path(profile_type: 'Corporate') %></li>
    </ul>

    <h3>Internal Profiles</h3>
      <ul>
        <li><%= link_to 'Agents', profiles_path(profile_type: 'Agent') %></li>
        <li><%= link_to 'Vendor', profiles_path(profile_type: 'Vendor') %></li>
      </ul>

    <h3>Special Filters</h3>
    For Profiles with....
    <ul>
      <li><%= link_to 'No Contact Details', profiles_path(profile_type: 'NO_CONACT_DETAILS') %></li>
      <li><%= link_to 'No Address', profiles_path(profile_type: 'NO_ADDRESS') %></li>
    </ul>
  </div>

  <% if can? :create, Profile %>
  <div  class="portal-2 box span-12">
  <h3>Add New Profiles</h3>
          <ul>
          <li><%=add_profile_link titleize: true, class: '', profile_type: :individual%></li>
          <li><%=add_profile_link titleize: true, class: '', profile_type: :corporate%></li>
          <li><%=add_profile_link titleize: true, class: '', profile_type: :agent %></li>
          <li><%=add_profile_link titleize: true, class: '', profile_type: :vendor %></li>
          </ul>
  </div>
  <% end %>

  <% if current_user.try :admin? %>
  <div  class="box span-12 portal-3">
  <h3>Administration</h3>    
        <ul>
          <li><%= link_to 'User Activity', profile_versions_path %></li>
          <li><%= link_to 'Manage Users', users_path %></li>
          <li><%= link_to 'Restore Deleted Profiles', view_deleted_profiles_path%></li>
          <li><%= link_to 'View System Updates', system_updates_index_path%></li>
        </ul>
  </div>
  <% end %>
</div>

  <div  class="portal-2 box span-12">
  <h3>Transactions</h3>
          <ul>
          <li><%=link_to 'New Transaction', new_transaction_path%></li>
          </ul>
  </div>



<hr/>
<div class="notifications">
  <div  class="box span-24">
  <h3 class="titleize">Notifications</h3> 
  <%if @expiring_passports && @expiring_passports.count > 0%>
    <%=link_to "There are #{@expiring_passports.count} Passports that are within 7 months of expiry", expiring_passports_path%>
  <% else %>
    <div> 
      <h4>-none-</h4>
    </div>
  <% end %>
  </div>

</div>

</div>